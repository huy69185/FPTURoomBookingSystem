@page
@model ClassroomBooking.Presentation.Pages.Admin.Classroom.EditModel

@{
    ViewData["Title"] = "Edit Classroom";
}

<div class="container mt-4">
    <div class="card shadow-lg p-4 rounded">
        <h2 class="text-primary"><i class="bi bi-pencil-square"></i> Edit Classroom</h2>
        <hr />

        <div class="row">
            <div class="col-md-6">
                <form method="post">
                    <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>
                    <input type="hidden" asp-for="Classrooms.ClassroomId" />

                    <div class="mb-3">
                        <label asp-for="Classrooms.ClassroomName" class="form-label fw-bold"></label>
                        <input asp-for="Classrooms.ClassroomName" class="form-control" />
                        <span asp-validation-for="Classrooms.ClassroomName" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="Classrooms.BuildingName" class="form-label fw-bold"></label>
                        <input asp-for="Classrooms.BuildingName" class="form-control" />
                        <span asp-validation-for="Classrooms.BuildingName" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="Classrooms.Capacity" class="form-label fw-bold"></label>
                        <input asp-for="Classrooms.Capacity" class="form-control" />
                        <span asp-validation-for="Classrooms.Capacity" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="Classrooms.Status" class="form-label fw-bold"></label>
                        <select asp-for="Classrooms.Status" class="form-select">
                            <option value="Available">Available</option>
                            <option value="Occupied">Occupied</option>
                            <option value="Maintenance">Maintenance</option>
                        </select>
                        <span asp-validation-for="Classrooms.Status" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="Classrooms.Description" class="form-label fw-bold"></label>
                        <textarea asp-for="Classrooms.Description" class="form-control" rows="3"></textarea>
                        <span asp-validation-for="Classrooms.Description" class="text-danger"></span>
                    </div>

                    <div class="d-flex justify-content-between">
                        <a asp-page="./ManageClassrooms" class="btn btn-secondary">
                            <i class="bi bi-arrow-left"></i> Back to List
                        </a>
                        <button type="submit" class="btn btn-success">
                            <i class="bi bi-check-circle"></i> Save Changes
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
