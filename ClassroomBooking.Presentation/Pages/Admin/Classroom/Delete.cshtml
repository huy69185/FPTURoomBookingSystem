@page
@model ClassroomBooking.Presentation.Pages.Admin.Classroom.DeleteModel

@{
    ViewData["Title"] = "Delete Classroom";
}

<div class="container mt-4">
    <div class="card shadow-lg p-4 rounded">
        <h2 class="text-danger">⚠️ Confirm Delete</h2>
        <p class="text-muted">Are you sure you want to delete this classroom? This action cannot be undone.</p>
        <hr />

        <dl class="row">
            <dt class="col-sm-3 fw-bold">Classroom Name:</dt>
            <dd class="col-sm-9">@Html.DisplayFor(model => model.Classrooms.ClassroomName)</dd>

            <dt class="col-sm-3 fw-bold">Building Name:</dt>
            <dd class="col-sm-9">@Html.DisplayFor(model => model.Classrooms.BuildingName)</dd>

            <dt class="col-sm-3 fw-bold">Capacity:</dt>
            <dd class="col-sm-9">@Html.DisplayFor(model => model.Classrooms.Capacity)</dd>

            <dt class="col-sm-3 fw-bold">Status:</dt>
            <dd class="col-sm-9">@Html.DisplayFor(model => model.Classrooms.Status)</dd>

            <dt class="col-sm-3 fw-bold">Description:</dt>
            <dd class="col-sm-9">@Html.DisplayFor(model => model.Classrooms.Description)</dd>
        </dl>

        <form method="post">
            <input type="hidden" asp-for="Classrooms.ClassroomId" />
            <div class="d-flex justify-content-between">
                <a asp-page="./ManageClassrooms" class="btn btn-secondary">
                    <i class="bi bi-arrow-left"></i> Back to List
                </a>
                <button type="submit" class="btn btn-danger">
                    <i class="bi bi-trash"></i> Delete
                </button>
            </div>
        </form>
    </div>
</div>
