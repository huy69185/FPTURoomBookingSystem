@page
@model ClassroomBooking.Presentation.Pages.Account.SignupModel
@{
    ViewData["Title"] = "Sign Up";
}

<div class="container d-flex justify-content-center align-items-center vh-100">
    <div class="card shadow p-4" style="width: 400px;">
        <h2 class="text-center mb-4">Sign Up</h2>

        <form method="post">
            <div class="mb-3">
                <label class="form-label">Student Code:</label>
                <input type="text" class="form-control" asp-for="StudentModel.StudentCode" placeholder="Enter your student code" required />
            </div>
            <div class="mb-3">
                <label class="form-label">Full Name:</label>
                <input type="text" class="form-control" asp-for="StudentModel.FullName" placeholder="Enter your full name" required />
            </div>
            <div class="mb-3">
                <label class="form-label">Email:</label>
                <input type="email" class="form-control" asp-for="StudentModel.Email" placeholder="Enter your email" required />
            </div>
            <div class="mb-3">
                <label class="form-label">Phone:</label>
                <input type="text" class="form-control" asp-for="StudentModel.PhoneNumber" placeholder="Enter your phone number" required />
            </div>
            <div class="mb-3">
                <label class="form-label">Password:</label>
                <input type="password" class="form-control" asp-for="StudentModel.Password" placeholder="Enter your password" required />
            </div>
            <div class="mb-3">
                <label class="form-label">Campus:</label>
                <select class="form-select" asp-for="StudentModel.Campus">
                    <option value="Hồ Chí Minh">Hồ Chí Minh</option>
                    <option value="Cần Thơ">Cần Thơ</option>
                    <option value="Hòa Lạc">Hòa Lạc</option>
                    <option value="Hà Nội">Hà Nội</option>
                    <option value="Quy Nhơn">Quy Nhơn</option>
                </select>
            </div>
            <button type="submit" class="btn btn-primary w-100">Sign Up</button>
        </form>

        @if (!string.IsNullOrEmpty(Model.ErrorMessage))
        {
            <div class="alert alert-danger mt-3 text-center">@Model.ErrorMessage</div>
        }
    </div>
</div>

<!-- Add Bootstrap CSS -->
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
<link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
<link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
