@page
@model ClassroomBooking.Presentation.Pages.Account.SignupModel
@{
    ViewData["Title"] = "Sign Up";
}
<h2>Sign Up</h2>

<form method="post">
    <div>
        <label>Student Code:</label>
        <input type="text" asp-for="StudentModel.StudentCode" />
    </div>
    <div>
        <label>Full Name:</label>
        <input type="text" asp-for="StudentModel.FullName" />
    </div>
    <div>
        <label>Email:</label>
        <input type="text" asp-for="StudentModel.Email" />
    </div>
    <div>
        <label>Phone:</label>
        <input type="text" asp-for="StudentModel.PhoneNumber" />
    </div>
    <div>
        <label>Password:</label>
        <input type="password" asp-for="StudentModel.Password" />
    </div>

    <!-- Chọn Campus trong 5 tùy chọn -->
    <div>
        <label>Campus:</label>
        <select asp-for="StudentModel.Campus">
            <option value="Hồ Chí Minh">Hồ Chí Minh</option>
            <option value="Cần Thơ">Cần Thơ</option>
            <option value="Hòa Lạc">Hòa Lạc</option>
            <option value="Hà Nội">Hà Nội</option>
            <option value="Quy Nhơn">Quy Nhơn</option>
        </select>
    </div>

    <button type="submit">Sign Up</button>
</form>

@if (!string.IsNullOrEmpty(Model.ErrorMessage))
{
    <div style="color:red">@Model.ErrorMessage</div>
}
